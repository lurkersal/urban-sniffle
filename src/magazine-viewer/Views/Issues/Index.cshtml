
@model (IEnumerable<MagazineViewer.Models.Issue> Issues, IEnumerable<MagazineViewer.Models.Magazine> Magazines, int? SelectedMagazineId, string? Category)

@{
    var selectedMag = Model.Magazines.FirstOrDefault(m => m.MagazineId == Model.SelectedMagazineId);
    ViewData["Title"] = selectedMag != null ? $"{selectedMag.Name} - Issues" : "Browse Issues";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">@(selectedMag != null ? selectedMag.Name : "All Issues")</h2>
    <form method="get" class="mb-0 ms-3">
        <div class="d-flex align-items-center">
            <label class="me-2 mb-0">Magazine</label>
            <select name="magazineId" class="form-control" id="magazineSelect" style="min-width: 180px;">
                <option value="">All Magazines</option>
                @foreach (var mag in Model.Magazines)
                {
                    <option value="@mag.MagazineId" selected="@(Model.SelectedMagazineId == mag.MagazineId)">@mag.Name</option>
                }
            </select>
        </div>
    </form>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var select = document.getElementById('magazineSelect');
        if (select) {
            select.addEventListener('change', function() {
                select.form.submit();
            });
        }
    });
</script>





@if (Model.Issues.Any())
{
    var groupedByYear = Model.Issues
        .GroupBy(i => i.Year)
        .OrderBy(g => g.Key);
    foreach (var yearGroup in groupedByYear)
    {
        <div class="mb-5">
            <h3 class="mb-3">@yearGroup.Key</h3>
            <div class="row">
                @foreach (var issue in yearGroup.OrderBy(i => i.Volume).ThenBy(i => i.Number))
                {
                    <div class="col-md-2 col-sm-4 col-6 mb-3">
                        <a href="/Issues/Details/@issue.IssueId" class="text-decoration-none">
                            <div class="card h-100 text-center hover-card">
                                @if (!string.IsNullOrEmpty(issue.CoverImagePath))
                                {
                                    <img src="/image?path=@Uri.EscapeDataString(issue.CoverImagePath)" 
                                         class="card-img-top" 
                                         alt="Vol @issue.Volume No @issue.Number"
                                         style="object-fit: contain; height: 250px; background-color: #f8f9fa;">
                                }
                                else
                                {
                                    <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" 
                                         style="height: 250px;">
                                        <span class="text-white">No Cover</span>
                                    </div>
                                }
                                <div class="card-body py-2">
                                    <p class="card-text mb-0"><strong>Vol @issue.Volume No @issue.Number</strong></p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    }
}
else
{
    <p class="text-muted">No issues found.</p>
}

<style>
    .hover-card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .hover-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
    }
</style>
