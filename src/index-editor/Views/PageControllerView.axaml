<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="IndexEditor.Views.PageControllerView"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Allow the controller to scroll if the window is small -->
        <!-- Disable horizontal scrolling so the image is always scaled to fit the pane width -->
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12" Spacing="12" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                    <Button Name="PrevPageBtn" Content="◀" Width="36" Height="36" Background="White" Foreground="Black"/>
                    <TextBox Name="PageInput" Text="8" Width="80" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Background="White" Foreground="Black"/>
                    <Button Name="NextPageBtn" Content="▶" Width="36" Height="36" Background="White" Foreground="Black"/>
                    <!-- Sync button removed per request -->
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <!-- Add Segment button removed in favor of Ctrl+A shortcut; End Segment removed -->
                </StackPanel>

                <!-- Transient toast for short messages (fades out) -->
                <Border Name="ToastBorder" Background="#CC000000" CornerRadius="6" Padding="8" HorizontalAlignment="Center" IsVisible="False" Opacity="1" Margin="0,6,0,0">
                    <TextBlock Name="ToastText" Foreground="White" FontWeight="Bold" FontSize="12" />
                </Border>

                <!-- Active Article and Active Segment panes removed from PageController; ActiveSegment will be shown in ArticleEditor -->

                 <!-- Page image (full width) with overlay message when missing -->
                <Border Background="#FFFFFF" CornerRadius="4" Padding="4" Name="PageImageBorder">
                    <Grid>
                        <!-- Bind MaxWidth to the Border's bounds so the image will never exceed the pane width; Stretch="Uniform" preserves aspect ratio.
                             StretchDirection="DownOnly" avoids upscaling so the image is only reduced to fit the width. Center horizontally. -->
                        <Image Name="PageImage" Stretch="Uniform" StretchDirection="DownOnly" HorizontalAlignment="Center"
                               MaxWidth="{Binding Path=Bounds.Width, ElementName=PageImageBorder}" />
                        <TextBlock Name="ImageMissingText" Text="Page image not found" Foreground="Red" Background="#80FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="False" Padding="8"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
