<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="IndexEditor.Views.PageControllerView"
             HorizontalAlignment="Stretch"
             VerticalAlignment="Stretch">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Allow the controller to scroll if the window is small -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="12" Spacing="12" VerticalAlignment="Stretch">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="8">
                    <Button Name="PrevPageBtn" Content="◀" Width="36" Height="36" Background="White" Foreground="Black"/>
                    <TextBox Name="PageInput" Text="8" Width="80" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="18" VerticalAlignment="Center" Background="White" Foreground="Black"/>
                    <Button Name="NextPageBtn" Content="▶" Width="36" Height="36" Background="White" Foreground="Black"/>
                    <!-- Sync button removed per request -->
                </StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <!-- Add Segment button removed in favor of Ctrl+A shortcut; End Segment remains -->
                    <Button Name="EndSegmentBtn" Content="End Segment" Background="White" Foreground="Black" />
                </StackPanel>

                <!-- Transient toast for short messages (fades out) -->
                <Border Name="ToastBorder" Background="#CC000000" CornerRadius="6" Padding="8" HorizontalAlignment="Center" IsVisible="False" Opacity="1" Margin="0,6,0,0">
                    <TextBlock Name="ToastText" Foreground="White" FontWeight="Bold" FontSize="12" />
                </Border>

                <!-- Active Article and Active Segment panes -->
                <StackPanel Orientation="Vertical" Spacing="8">
                    <Border Background="#F7F7F7" CornerRadius="4" Padding="8">
                        <StackPanel>
                            <TextBlock Text="Active Article" FontWeight="Bold" Foreground="Black" />
                            <!-- Match the article card typography: left = DisplayTitle (bold, 18), right = Category (bold, 14) -->
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ActiveArticleTitle" Grid.Column="0" Text="— none —" FontWeight="Bold" FontSize="18" Foreground="Black" VerticalAlignment="Top" />
                                <TextBlock x:Name="ActiveArticleCategory" Grid.Column="1" Text="" FontWeight="Bold" FontSize="14" Foreground="Black" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="8,0,0,0" />
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="#F7F7F7" CornerRadius="4" Padding="8">
                        <StackPanel>
                            <TextBlock Text="Active Segment" FontWeight="Bold" Foreground="Black" />
                            <TextBlock Name="ActiveSegmentText" Text="— none —" FontSize="14" Foreground="Black" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Status / Feedback Area removed -->
                 <!-- Page image (full width) with overlay message when missing -->
                <Border Background="#FFFFFF" CornerRadius="4" Padding="4">
                    <Grid>
                        <Image Name="PageImage" Stretch="Uniform" HorizontalAlignment="Stretch" />
                        <TextBlock Name="ImageMissingText" Text="Page image not found" Foreground="Red" Background="#80FFFFFF" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="False" Padding="8"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
