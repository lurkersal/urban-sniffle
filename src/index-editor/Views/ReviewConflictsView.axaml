<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="IndexEditor.Views.ReviewConflictsView">
    <StackPanel Margin="16" Spacing="12">
        <TextBlock Text="Page Timeline" FontWeight="Bold" FontSize="16" Margin="0,0,0,8"/>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,2">
                <TextBlock Text="2–3" Width="60"/>
                <TextBlock Text="Letters"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,2">
                <TextBlock Text="4–7" Width="60"/>
                <TextBlock Text="Fashion"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,2">
                <TextBlock Text="8–9 ⚠" Width="60" Foreground="#E57373"/>
                <TextBlock Text="Letters"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Spacing="16" Margin="0,2">
                <TextBlock Text="8–11 ⚠" Width="60" Foreground="#E57373"/>
                <TextBlock Text="Interview"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12" Margin="0,16,0,0">
            <Button Content="Jump to conflict"/>
            <Button Content="Auto-adjust"/>
            <Button Content="Back"/>
        </StackPanel>
        <TextBlock Text="Auto-adjust rules are previewed before applying." FontStyle="Italic" FontSize="12" Margin="0,12,0,0"/>
    </StackPanel>
</UserControl>
